
@if (User == null)
{
    <p>Loading image ...</p>
}
else
{
<img alt="" src="@("data:image/png;base64," + Convert.ToBase64String(@User.ProfilePicture, 0, @User.ProfilePicture.Length))" style="height:@($"{SizeY}px");width:@($"{SizeX}px");" />
}

@code
{
    [Parameter]
    public UserViewModel User { get; set; }

    [Parameter]
    public int SizeX { get; set; } = 150;

    [Parameter]
    public int SizeY { get; set; } = 150;
}